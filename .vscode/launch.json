{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/VendingMachine/bin/Debug/netcoreapp2.2/VendingMachine.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "externalTerminal", //externalTerminal = cmd popup || integratedTerminal = VBC Terminal window || internalConsole = VBC Debug Console     
            "stopAtEntry": false,
            "requireExactSource": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}